<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.avestafani.tourism.kermanshah_restoran">

    <android.support.design.widget.AppBarLayout
        android:background="#01254d"
        android:layout_height="120dp"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رستوران ها"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginRight="43dp"

                android:layout_marginTop="11dp"
                android:textColor="#fffcfc"/>
            <ImageView
                android:id="@+id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_exit1"
                android:layout_marginTop="22dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:layout_width="90dp"
                android:layout_marginRight="43dp"
                android:textSize="14dp"
                android:textColor="#f7f5f5"
                android:layout_marginTop="38dp"
                android:layout_height="wrap_content"
                android:text="ایران-کرمانشاه"
                />

            <ImageView
                android:id="@+id/map"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_location"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"


                />
        </RelativeLayout>



        <EditText
            android:id="@+id/etxt1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:drawableRight="@drawable/ic_search"
            android:background="@drawable/rating_search1"
            android:inputType="textPersonName"
            android:hint="   جستجو   "
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@+id/view"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bnav"
        android:background="#c9c7c7"
        />
    <android.support.design.widget.BottomNavigationView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:menu="@menu/menu_navigation_b"
        android:elevation="2dp"
        android:background="#ffff"
        app:itemTextColor="@drawable/item_selector"
        app:itemIconTint="@drawable/item_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/bnav">
    </android.support.design.widget.BottomNavigationView>


</RelativeLayout>
