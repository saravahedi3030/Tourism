<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.avestafani.tourism.MainActivity">

<LinearLayout
    android:background="#ffff"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <ImageView
        android:id="@+id/img2"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="0.05"
        app:srcCompat="@drawable/iran11" />


</LinearLayout>
    <LinearLayout
        android:background="#ffff"
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/map" />

    </LinearLayout>


    <LinearLayout
        android:background="#ffff"
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="اپلیکیشن جامع راهنمای سفر و خدمات گردشگری"
            android:textColor="#01254d"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="IRANGARDI"
            android:textColor="#01254d"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:background="#ffff"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >



           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_gravity="center">


               <ProgressBar
                   android:id="@+id/progressBar"
                   android:layout_gravity="center"
                   android:indeterminate="false"
                   android:progress="0"
                   android:background="@drawable/circle"
                   style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                   android:layout_width="70dp"
                   android:progressDrawable="@drawable/circle_pro"
                   android:layout_height="70dp" />
               <TextView
                   android:id="@+id/txt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:text="50%"
                   android:textAlignment="center"
                   android:layout_gravity="center"
                   android:textColor="#fcfbfb"
                   />

           </FrameLayout>

       </LinearLayout>



</RelativeLayout>
