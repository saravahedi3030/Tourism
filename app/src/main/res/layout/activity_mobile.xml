<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.avestafani.tourism.mobile">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <ImageView
            android:id="@+id/img1"
           android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/korh" />

    </LinearLayout>

    <LinearLayout

        android:layout_below="@+id/line"
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="اپلیکیشن جامع راهنمای سفر و خدمات گردشگری"
            android:textColor="#04a5c6"
            android:textSize="15dp" />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt2"
            android:text="IRANGARDI"
            android:textColor="#04a5c6"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/txt3"
            android:text="لطفا شماره همراه خود را وارد کنید"
            android:background="#d9d7d7"
            android:textColor="#0a0b0b"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:elevation="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+98"
            android:background="#15cbf1"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#100f0f"/>

        <EditText
            android:paddingRight="10dp"
            android:hint="شماره موبایل"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="ارسال کد تایید"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="سیاست حفظ حریم خصوصی"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
