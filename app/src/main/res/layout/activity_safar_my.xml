<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ml"
    tools:context="com.example.avestafani.tourism.safar_my">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#01254d">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="43dp"
                android:layout_marginTop="18dp"
                android:text="سفر ها"
                android:textColor="#fcfafa"

                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_exit1" />


        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/imgava"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rating_bottom"
        android:src="@drawable/camera" />

    <EditText
        android:id="@+id/txtname1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rating8"
        android:drawableLeft="@drawable/ic_person3"
        android:ems="10"
        android:hint="نام"
        android:inputType="textPersonName"
        android:paddingLeft="2dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/txtloc"
        android:layout_width="match_parent"
        android:ems="10"
        android:paddingLeft="2dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="مکان سفر"
        android:paddingRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_height="35dp"

        android:drawableLeft="@drawable/ic_location_on_black3_24dp"
        android:background="@drawable/rating8"/>

    <Button
        android:background="@drawable/rating_bottom"
        android:id="@+id/d1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:text="تاریخ :" />

    <EditText
        android:paddingLeft="4dp"
        android:drawableLeft="@drawable/ic_date3"
        android:id="@+id/data1"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint=" تاریخ سفر"
        android:paddingRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_height="35dp"
        android:background="@drawable/rating8" />

    <EditText
        android:drawableLeft="@drawable/group3"
        android:id="@+id/txtdes"
        android:layout_width="match_parent"
        android:ems="10"
        android:paddingLeft="5dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="دوستان"
        android:paddingRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_height="35dp"
        android:background="@drawable/rating8"/>

    <Button
        android:id="@+id/bshow"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/rating_bottom"
        android:text="تایید" />


</LinearLayout>
