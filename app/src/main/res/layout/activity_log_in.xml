<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.avestafani.tourism.log_in">
    <RelativeLayout
        android:id="@+id/reg"
        android:layout_width="368dp"
        android:layout_height="150dp"
       >
        <ImageView
            android:id="@+id/im1"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>



    <TextView
        android:id="@+id/txt3"
        android:textSize="15dp"
        android:textColor="#01254d"
        android:text="ثبت نام"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
         />


    <TextView
        android:id="@+id/txt1"
        android:textSize="15dp"
        android:textColor="#fafcfd"
        android:text="ورود"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        android:layout_marginLeft="45dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="290dp"
        android:layout_height="260dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/rating_log"
        android:elevation="90dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        app:layout_constraintRight_toRightOf="@+id/reg"
        app:layout_constraintTop_toBottomOf="@+id/reg"
        >


        <EditText
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/rating8"
            android:id="@+id/txtname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_person123"
            android:ems="10"
            android:hint="نام کاربری"
            android:inputType="textPersonName" />

        <EditText
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/rating8"
            android:hint="نام کاربری"
            android:id="@+id/txtpass"
            android:layout_marginTop="12dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:drawableLeft="@drawable/loc"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:text="رمز خود را فراموش کرده اید؟"
            android:textColor="#696868" />

        <Button
            android:id="@+id/b"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:background="@drawable/rating_bottom"
            android:text="ورود"
            android:onClick="save"
            android:textColor="#fcfbfb"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:layout_width="350dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#636262"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ایجاد حساب کاربری؟"/>

        <TextView
            android:id="@+id/txt20"
            android:textColor="#01254d"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="ثبت نام"/>


    </LinearLayout>

    <RelativeLayout


        android:layout_width="220dp"
        android:layout_height="375dp"
        android:layout_marginTop="-3dp"
        android:background="@drawable/rating_search"
        app:layout_constraintTop_toBottomOf="@+id/reg"
      />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="1">


        <android.support.design.widget.FloatingActionButton
            android:layout_marginTop="37dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/insta12"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/fab_right"
            android:id="@+id/insta"
            app:backgroundTint="#01254d"
            app:pressedTranslationZ="12dp"
            android:layout_weight="0.31" />


        <android.support.design.widget.FloatingActionButton
            android:layout_marginTop="37dp"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/google12"
            android:layout_marginLeft="@dimen/fab_right"
            android:id="@+id/google"
            app:backgroundTint="#01254d"
            app:pressedTranslationZ="12dp"

            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
