<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/reg"
        android:layout_width="368dp"
        android:layout_height="150dp"
        >
        <ImageView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gard"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout

        app:layout_constraintTop_toBottomOf="@+id/reg"
        android:layout_width="220dp"
        android:layout_height="375dp"
        android:background="@drawable/rating_search"

        />


    <TextView
        android:textSize="15dp"
        android:textColor="#fdfcfc"
        android:text="ورود"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        android:layout_marginLeft="45dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15dp"
        android:textColor="#5c5c5c"
        android:text="ثبت نام"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        android:layout_marginLeft="40dp"
        android:layout_width="310dp"
        android:layout_height="wrap_content" />






    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="300dp"
        android:layout_height="260dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/rating_log"
        android:elevation="90dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        app:layout_constraintRight_toRightOf="@+id/reg"
        app:layout_constraintTop_toBottomOf="@+id/reg">


        <EditText
            android:id="@+id/txtname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_person123"
            android:ems="10"
            android:hint="نام کاربری"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtpass"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/loc"
            android:ems="10"
            android:gravity=""
            android:hint="پسورد"
            android:inputType="textPersonName" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:text="رمز خود را فراموش کرده اید؟"
            android:textColor="#696868" />

        <Button
            android:id="@+id/button"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:background="@drawable/rating_bottom"
            android:onClick="save"
            android:text="ورود"
            android:textColor="#fcfbfb"
            android:textSize="20dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>