<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:background="#ffff"
    tools:context="com.example.avestafani.tourism.sign_in">


    <RelativeLayout
        android:id="@+id/reg"
        android:layout_width="368dp"
        android:layout_height="150dp"
        >
        <ImageView
            android:id="@+id/im1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout

        app:layout_constraintTop_toBottomOf="@+id/reg"
        android:layout_width="220dp"
        android:layout_height="370dp"
        android:background="@drawable/rating_gradint"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/txt1"
        android:textSize="15dp"
        android:textColor="#01254d"
        android:text="ورود"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        android:layout_marginLeft="45dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt2"
        android:textSize="15dp"
        android:textColor="#fffefe"
        android:text="ثبت نام"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent">
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        android:src="@drawable/mail1"
        android:elevation="6dp"
        android:id="@+id/fab_mail"
        app:pressedTranslationZ="12dp"
        android:background="#079f05"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@color/fab1"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/fab_right"
        android:src="@drawable/telg"
        android:elevation="6dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fab_twiter"
        app:pressedTranslationZ="12dp"
        android:visibility="invisible"
        android:background="#01254d"
        app:backgroundTint="@color/fab2"

        />



    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ad"
        android:elevation="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/fab_right"
        android:id="@+id/fab_plus"
        app:backgroundTint="#01254d"
        app:pressedTranslationZ="12dp"

        />
</LinearLayout>


    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="290dp"
        android:layout_height="260dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/rating_log"
        android:elevation="90dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        app:layout_constraintRight_toRightOf="@+id/reg"
        app:layout_constraintTop_toBottomOf="@+id/reg">


        <EditText
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/rating8"
            android:id="@+id/txtname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_person123"
            android:ems="10"
            android:hint="نام کاربری"
            android:inputType="textPersonName" />

        <EditText
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/rating8"
            android:id="@+id/txtpass"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/loc"
            android:ems="10"
            android:gravity=""
            android:hint="پسورد"
            android:inputType="textPersonName" />

        <EditText
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/rating8"
            android:id="@+id/txtpass2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/loc"
            android:ems="10"
            android:gravity="right"
            android:hint="تکرر پسورد"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="رمز خود را فراموش کرده اید؟"
            android:textColor="#696868" />

        <Button
            android:id="@+id/button"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="6dp"
            android:background="@drawable/rating_bottom"
            android:onClick="save"
            android:text=" ثبت نام"
            android:textColor="#fcfbfb"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="irangardi@gmail.com"
            android:textColor="#636262"
            android:textStyle="bold" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
